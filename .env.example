# Database Configuration
# Use this for quick setup with Docker defaults
DATABASE_URL=postgres://c2user:c2pass@localhost:5433/c2_db?sslmode=disable

# Server Configuration
PORT=8080

# Database Pool Configuration (optional, has sensible defaults)
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Agent Activity Tracking
# Mark agents as inactive if no beacon received in this many minutes
AGENT_INACTIVE_THRESHOLD_MINUTES=5

# Data Retention
# Delete command executions older than this many days
RETENTION_DAYS=30
ENABLE_AUTO_CLEANUP=true
CLEANUP_HOUR=3

# Logging
# Options: INFO, WARN, ERROR
LOG_LEVEL=INFO
